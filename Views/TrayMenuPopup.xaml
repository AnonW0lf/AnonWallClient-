<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="AnonWallClient.Views.TrayMenuPopup">
    <VerticalStackLayout Padding="16" BackgroundColor="White" Spacing="12">
        <Button Text="Open" x:Name="OpenButton" />
        <Button Text="Panic" x:Name="PanicButton" />
        <BoxView HeightRequest="1" BackgroundColor="Gray" />
        <Button Text="Exit" x:Name="ExitButton" />
    </VerticalStackLayout>
</toolkit:Popup>